{
  "manifest_version": 2,
  "name": "GraphQL Voyager for Chrome",
  "version": "1.0.0",
  "description": "Chrome extension for GraphQL Voyager",
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "GraphQL Voyager for Chrome",
    "default_icon": {
      "64": "public/favicon-96x96.png",
      "128": "public/favicon-96x96.png"
    }
  },
  "icons": {
    "64": "public/favicon-96x96.png",
    "128": "public/favicon-96x96.png"
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "storage"
  ]
}
